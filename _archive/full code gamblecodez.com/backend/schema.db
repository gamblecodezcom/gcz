CREATE TABLE affiliates (
  id INT AUTO_INCREMENT PRIMARY KEY,
  name VARCHAR(120),
  affiliate_url VARCHAR(255),
  priority INT,
  category VARCHAR(128),
  status VARCHAR(24),
  level INT,
  date_added DATE,
  bonus_code VARCHAR(32),
  bonus_description TEXT
);

CREATE TABLE newsletter (
  id INT AUTO_INCREMENT PRIMARY KEY,
  email VARCHAR(140) UNIQUE,
  jurisdiction VARCHAR(12),
  telegram VARCHAR(64),
  cwallet VARCHAR(66),
  promooptin BOOLEAN DEFAULT false,
  last_checkin DATE
);

CREATE TABLE raffles (
  id INT AUTO_INCREMENT PRIMARY KEY,
  title VARCHAR(140),
  prize VARCHAR(140),
  description TEXT,
  winners INT,
  status VARCHAR(16),
  winners_list TEXT
);